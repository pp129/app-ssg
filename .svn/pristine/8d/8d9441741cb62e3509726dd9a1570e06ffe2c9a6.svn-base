<ion-header>
	<ion-navbar>
		<ion-title>登录</ion-title>
	</ion-navbar>
</ion-header>

<ion-content>
	<ion-item>
		<ion-label floating>账号</ion-label>
		<ion-input type="text" #username [ngModel]="users?.username"></ion-input>
	</ion-item>
	<ion-item>
		<ion-label floating>密码</ion-label>
		<ion-input type="password" #password [ngModel]="users?.password"></ion-input>
	</ion-item>
	<ion-item>
		<ion-label floating>验证码</ion-label>
		<ion-input type="text" #validatecode [ngModel]="users?.validatecode"></ion-input>
		<ion-thumbnail item-end (click)="changeImg()" style="min-height:40px;z-index: 999;">
			<img src="{{imgSrc}}" style="height:40px;">
		</ion-thumbnail>
	</ion-item>
	<ion-item no-lines>
		<label item-right>记住密码</label>
		<ion-toggle [(ngModel)]="remember" (ionChange)="ifRemember(username, password)"></ion-toggle>
	</ion-item>

	<div style="text-align: center; margin-left: 30px; margin-right: 30px;">
		<button ion-button block color="danger" (click)="logIn(username, password,validatecode)">
			登录
		</button>
	</div>
</ion-content>
